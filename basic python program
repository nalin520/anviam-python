class operations:
    
    def __init__(self):
        self.func()
        x = int(input("enter the no. for operation"))
        if x==1:
            sum()
        if x==2:
            sub()
        if x==3:
            product()
        if x==4:
            divide()
        self.myfunc()
            
    def func(self):
        print("press 1 for sum")
        print("press 2 for subtract")
        print("press 3 for product")
        print("press 4 for division")
        
    def myfunc(self):
        print("do you want to continue?")
        y = int(input("press 1 to continue, 2 to end:"))
        if(y==1):
            p1 = operations()
            self.myfunc()
        if(y==2):
            pass
    #making a program to add two numbers
    def sum():
        a = int(input("input the first number:"))
        b = int(input("input the second number:"))

        res = a+b #adding both the numbers

        print("the sum of both numbers:",res)
        
    #making a program to subtract two numbers
    def sub():
        a = int(input("input the first number:"))
        b = int(input("input the second number:"))

        res = abs(a-b) #subtracting both the numbers

        print("the difference of both numbers:",res)

    #making a program to multiply two numbers    
    def product():
        a = int(input("input the first number:"))
        b = int(input("input the second number:"))

        res = a*b #multiplying both the numbers

        print("the product of both numbers:",res)
        
    #making a program to divide two numbers    
    def divide():
        a = int(input("input the first number:"))
        b = int(input("input the second number:"))

        res = a/b #dividing both the numbers

        print("the product of both numbers:",res)
    

p1 = operations()
